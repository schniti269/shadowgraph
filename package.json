{
    "name": "shadowgraph",
    "displayName": "ShadowGraph",
    "description": "Semantic intent preservation for code. Link thoughts, constraints, and architectural decisions to code symbols via stable AST anchors. Team collaboration through git-tracked graphs.",
    "version": "0.3.3",
    "publisher": "schniti269",
    "author": "ShadowGraph Contributors",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/shadowgraph"
    },
    "bugs": {
        "url": "https://github.com/yourusername/shadowgraph/issues"
    },
    "homepage": "https://github.com/yourusername/shadowgraph#readme",
    "keywords": [
        "semantic",
        "ai-agents",
        "debugging",
        "collaboration",
        "intent-preservation",
        "code-intelligence",
        "ast",
        "graph-database",
        "team-context",
        "blast-radius"
    ],
    "icon": "icons/shadowgraph-logo.png",
    "galleryBanner": {
        "color": "#2c3e50",
        "theme": "dark"
    },
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Programming Languages",
        "Other",
        "AI"
    ],
    "activationEvents": [
        "workspaceContains:**/*.py",
        "workspaceContains:**/*.ts",
        "workspaceContains:**/*.js",
        "workspaceContains:**/*.jsx",
        "workspaceContains:**/*.tsx",
        "onCommand:shadowgraph.initialize",
        "onCommand:shadowgraph.indexCurrentFile",
        "onCommand:shadowgraph.checkDrift",
        "onCommand:shadowgraph.showThoughts",
        "onCommand:shadowgraph.addThought",
        "onCommand:shadowgraph.showStatus",
        "onCommand:shadowgraph.runDiagnostics",
        "onCommand:shadowgraph.analyzeBlastRadius"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "mcpServerDefinitionProviders": [
            {
                "id": "shadowgraph.mcpServer",
                "label": "ShadowGraph MCP Server"
            }
        ],
        "commands": [
            {
                "command": "shadowgraph.initialize",
                "title": "ShadowGraph: Initialize Database"
            },
            {
                "command": "shadowgraph.indexCurrentFile",
                "title": "ShadowGraph: Index Current File"
            },
            {
                "command": "shadowgraph.checkDrift",
                "title": "ShadowGraph: Check Drift"
            },
            {
                "command": "shadowgraph.showThoughts",
                "title": "ShadowGraph: Show Thoughts for Symbol"
            },
            {
                "command": "shadowgraph.addThought",
                "title": "ShadowGraph: Add Thought to Symbol"
            },
            {
                "command": "shadowgraph.showStatus",
                "title": "ShadowGraph: Show Server Status & Debug Info"
            },
            {
                "command": "shadowgraph.runDiagnostics",
                "title": "ShadowGraph: Run Diagnostics"
            },
            {
                "command": "shadowgraph.analyzeBlastRadius",
                "title": "ShadowGraph: Analyze Blast Radius"
            }
        ],
        "configuration": {
            "title": "ShadowGraph",
            "properties": {
                "shadowgraph.pythonPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Python 3.10+ executable. If empty, uses 'python3' or 'python' from PATH."
                },
                "shadowgraph.enableCodeLens": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show thought count CodeLens above functions with linked thoughts."
                },
                "shadowgraph.enableStaleDecorations": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show gutter warnings for functions with stale AST anchors."
                },
                "shadowgraph.autoIndex": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically index files on save."
                },
                "shadowgraph.enableGitIntegration": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-load graph from .shadow/graph.jsonl on pull."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "node esbuild.js --production",
        "build": "node esbuild.js",
        "watch": "node esbuild.js --watch",
        "package": "vsce package",
        "test:python": "pytest src/test/server -v",
        "test": "npm run test:python"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.96.0",
        "esbuild": "^0.24.0",
        "typescript": "^5.6.0"
    },
    "dependencies": {
        "@vscode/vsce": "^3.7.1",
        "sql.js": "^1.11.0"
    },
    "optionalDependencies": {
        "@esbuild/win32-ia32": "^0.27.3"
    }
}